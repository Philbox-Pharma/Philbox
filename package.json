{
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "server/src/**/*.js": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md}": [
      "npx prettier --write"
    ]
  }
}
